%html{ itemscope: true, itemtype: "http://schema.org/WebPage", lang: 'en' }
  %head
    %title= data.site.portfolio.title
    = stylesheet_link_tag 'portfolio', property: 'stylesheet'
    = partial 'partials/meta'
    %meta{ name: 'keywords',      content: data.site.portfolio.keywords }
    %meta{ name: 'description',   content: data.site.portfolio.description }
    %meta{ name: 'twitter:image', content: data.site.blog.preview }

  %body
    = yield

    = stylesheet_link_tag 'application', property: 'stylesheet'
    = partial 'partials/production_code'