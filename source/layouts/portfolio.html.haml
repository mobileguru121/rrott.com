!!! 5

%html{ itemscope: true, itemtype: "http://schema.org/WebPage", lang: 'en' }
  %head
    %title= title
    = stylesheet_link_tag 'portfolio', property: 'stylesheet'
    = partial 'partials/meta'
    %meta{ name: 'keywords',    content: keywords }
    %meta{ name: 'description', content: description }

    -if defined? canonical and canonical != nil
      %meta{ name: "robots", content: "noindex, follow" }
      %link{ href: canonical, rel: "canonical" }

  %body
    = yield

    = stylesheet_link_tag 'application', property: 'stylesheet'
    = javascript_include_tag 'image-preview'
    = partial 'partials/production_code'

    :javascript
      window.Helpers.disableLinks()

