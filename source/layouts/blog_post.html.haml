!!! 5

%html{itemscope: true, itemtype: "http://schema.org/BlogPosting", lang: 'en'}
  %head
    = stylesheet_link_tag  'blog', property: 'stylesheet'
    = stylesheet_link_tag  'syntax', property: 'stylesheet'

    = partial 'meta'
    %title= data.site.blog.title
    %meta{name: 'keywords',    content: data.site.blog.keywords}
    %meta{name: 'description', content: data.site.blog.description}

  %body
    #layout.pure-g
    .sidebar.pure-u-1.pure-u-md-1-4
      .header.blog-left-part
        .brand-title Blog
        %h1.brand-tagline Full-Stack development and security researches
        %nav.nav
          %ul.nav-list
            %li.nav-item
              %a.pure-button{href: "/", title: "Roman Rott's home page"} Home
            \/
            %li.nav-item
              %a.pure-button{href: "/portfolio/", title: "Portfolio page"} Portfolio
        .blog-contacts
          %br
          = partial 'links'
          %br
          Open for remote job opportunities
        %br
        .blog-categories
          %nav.nav.tag-cloud
            %ul.nav-list
              -# - data.links.blog_sections.each do |section|
              -#   %li
              -#     %a{href: section.url, title: "#{section.name} projects by Roman Rott"} #{section.name}
        .share
          Share:
          .addthis_sharing_toolbox


    .content.pure-u-1.pure-u-md-3-4
      %section
        %h1.is-center.content-subhead
          Blog about Full-Stack development and security researches.
      %article
        = yield

    = stylesheet_link_tag    'grids', property: 'stylesheet'

    - if build?
      %script{async: true, src: "//s7.addthis.com/js/300/addthis_widget.js#pubid=ra-52d2dafa2886822d", type: "text/javascript"}
      -# Google Analytics
      :javascript
        var _gaq = _gaq || [];
        _gaq.push(['_setAccount', 'UA-72811093-1']);
        _gaq.push(['_trackPageview']);
        (function() {
          var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
          ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
          var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
        })();