%html{ itemscope: true, itemtype: "http://schema.org/BlogPosting", lang: 'en' }
  %head
    %title= data.site.blog.title
    = stylesheet_link_tag  'portfolio', property: 'stylesheet'
    = partial 'partials/meta'
    %meta{ name: 'keywords',      content: data.site.blog.keywords }
    %meta{ name: 'description',   content: data.site.blog.description }
    %meta{ name: 'twitter:image', content: data.site.blog.preview }

  %body
    = yield

    = stylesheet_link_tag 'application', property: 'stylesheet'
    = javascript_include_tag 'lunar-search'
    = partial 'partials/production_code'