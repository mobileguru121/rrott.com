      .header.portfolio-left-part
        %h1.brand-title Portfolio page
        %h2.brand-tagline Projects accomplished in 2015 and active in 2016
        %nav.nav
          %ul.nav-list
            %li.nav-item
              %a.pure-button{href: "https://rott.org.ua", title: 'Home page of rott.org.ua'} Home
            %li.nav-item
              %a.pure-button{href: "https://rott.org.ua/blog/", title: "Roman Rott's blog"} Blog
        .portfolio-contacts
          %br
          = partial 'links'
          %br
          Open for remote job opportunities
        %br
        .portfolio-categories
          %nav.nav.tag-cloud
            %ul.nav-list
              - data.links.portfolio_sections.each do |section|
                %li
                  %a{href: section.url, title: "#{section.name} projects by Roman Rott"} #{section.name}

