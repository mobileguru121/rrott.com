- all_projects ||= data.portfolio.sections.first.projects_list
-if defined? canonical
  %meta{name: "robots", content: "noindex, follow"}
  %link{href: canonical, rel: "canonical"}

%body
  #preview
    %strong#close X
    .overlay
      #prev.icon-left-open
      .middle
        %img.large-img.pure-img-responsive#preview-image
        -# %img.pure-img-responsive#preview-image{alt: "Image Preview", src: ""}/
      #next.icon-right-open
  #layout.pure-g
    .sidebar.pure-u-1.pure-u-md-1-4
      .header.portfolio-left-part
        %h1.brand-title Portfolio page
        %h2.brand-tagline Projects accomplished in 2015 and active in 2016
        %nav.nav
          %ul.nav-list
            %li.nav-item
              %a.pure-button{href: "https://rott.org.ua", title: 'Home page of rott.org.ua'} Home
            -# %li.nav-item
            -#   %a.pure-button{href: "https://rott.org.ua/blog/", title: "Roman Rott's blog"} Blog
        .portfolio-contacts
          %br
          = partial 'links'
          %br
          Open for remote job opportunities
        %br
        .portfolio-categories
          %nav.nav.tag-cloud
            %ul.nav-list
              - data.links.portfolio_sections.each do |section|
                %li
                  %a{href: section.url, title: "#{section.name} projects by Roman Rott"} #{section.name}

    .content.pure-u-1.pure-u-md-3-4
      %div
        - all_projects.each do |sections|
          = partial 'portfolio/section', locals: { projects: sections}
        .footer
          .pure-menu.pure-menu-horizontal
            = partial 'links'
